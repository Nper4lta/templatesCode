fi

if [ -e $filename ]
then
	echo "Exists"

	newModified=$(date +"%Y-%b-%d %R")
	modifiedForm="Last modified: 2023-Mar-08 17:28
	sed -i "s/Last modified: 2023-Mar-08 17:28

elif [ ! -f $filename ]
then
